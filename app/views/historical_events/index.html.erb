<%= render 'navigation' %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
    <% @events.each do |event| %>
      <tr>
        <td><%= event_start(event) %></td>
        <td><%= summary(event) %>
          <% if blurb(event) %>
            <br><%= blurb(event) %>
          <% end %>
          <% if @current_user %>
          <% @current_user.people.each do |person| %>
              <% if age_of_person(event, person) %>
                <br><%= age_of_person(event, person) %>
              <% end %>
            <% end %>
            <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
