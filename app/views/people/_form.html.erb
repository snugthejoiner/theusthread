<div class="col-md-8">
  <%= form_for @person do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "name" %>
    </div>
    <div class="form-group">
      <%= f.label :born %>
      <%= f.date_field :born, class: 'form-control', placeholder: "born Date" %>
    </div>
    <div class="form-group">
      <%= f.label :died %>
      <%= f.date_field :died, class: 'form-control', placeholder: "died Date" %>
    </div>
    <!-- update with current_user_id -->
    <%= f.hidden_field :user_id, value: 6 %>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>