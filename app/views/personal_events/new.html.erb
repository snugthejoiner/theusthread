<%= render 'navigation' %>

<ol class="breadcrumb">
  <li><%= link_to @person.user.username, users_show_path %></li>
  <li><%= link_to @person.name, @person %></li>
  <li class="active">event</li>
</ol>

<% unless notice.nil? %>
  <p class="notice"><%= notice %></p>
<% end %>
<% unless alert.nil? %>
  <p class="alert"><%= alert %></p>
<% end %>

<h1>New Event for <%= @person.name %></h1>
<p>Create an event on or after <%= @personal_event.person.born.strftime('%m/%d/%Y') %></p>

<div class="row">
  <div class="col-md-12">
    <%= render 'form' %>
  </div>
 </div>