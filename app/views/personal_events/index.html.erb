<%= render 'navigation' %>

<ol class="breadcrumb">
  <li><%= link_to current_user.username, users_show_path %></li>
  <li class="active">All events for all my People</li>
</ol>

<% unless notice.nil? %>
  <p class="notice"><%= notice %></p>
<% end %>
<p class="alert"><%= alert %></p>



<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
    <% @personal_events.each do |personal_event| %>
      <tr>
        <td><%= personal_event.starting %><br><%= personal_event.ending %></td>
        <td><%= link_to personal_event.description, edit_personal_event_path(personal_event) %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>