<%= render 'navigation' %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
    <% @personal_events.each do |personal_event| %>
      <tr>
        <td><%= personal_event.starting %><br><%= personal_event.ending %></td>
        <td><%= link_to personal_event.description, personal_event %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>